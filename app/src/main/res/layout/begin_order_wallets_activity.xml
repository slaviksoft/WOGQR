<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_copyright"
        android:background="@drawable/copyright_background"
        android:id="@+id/tvCopyright"
        android:gravity="center"
        android:textColor="@color/White"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button3"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:measureWithLargestChild="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Топливо:"
                android:id="@+id/textView5"
                android:textColor="@color/green1"
                android:layout_gravity="center_vertical"
                android:layout_weight="35" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Бензин А-95"
                android:id="@+id/textView6"
                android:background="@drawable/item_text_background"
                android:textColor="@color/green3"
                android:layout_weight="65"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Доступно:"
                android:id="@+id/textView7"
                android:textColor="@color/green1"
                android:layout_gravity="center_vertical"
                android:layout_weight="35" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="10.34 л."
                android:id="@+id/textView8"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@drawable/item_text_background"
                android:textColor="@color/green3"
                android:layout_weight="65"
                android:gravity="center_horizontal"

                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Заказано:"
                android:id="@+id/textView10"
                android:textColor="@color/green1"
                android:layout_gravity="center_vertical"
                android:layout_weight="35" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="9.00 л."
                android:id="@+id/editText11"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@drawable/item_text_enter_background"
                android:textColor="@color/green3"
                android:layout_weight="65"
                android:gravity="center_horizontal"

                />



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="5 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="10 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="15 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="20 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="25 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="30 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="35 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="40 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="50 л."
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="12dp"
                    />

            </LinearLayout>

        </ScrollView>




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Отправить"
        android:id="@+id/button3"
        android:layout_above="@id/tvCopyright"
        android:background="@android:color/transparent"
        />

</RelativeLayout>

